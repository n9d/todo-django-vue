{
    // コンテナの名前
    "name": "dev container",
    // Docker Composeの設定ファイルパス
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    // コンテナのサービス名
    "service": "app",
    // VSCodeで開くコンテナ内のパス
    "workspaceFolder": "/code",
    // コンテナ内で使用する拡張機能
    "extensions": [
        "ms-python.python",
        "coenraads.bracket-pair-colorizer",
        "sohamkamani.code-eol",
        "batisteo.vscode-django",
        "oderwat.indent-rainbow",
        "ms-ceintl.vscode-language-pack-ja"
    ]
}
